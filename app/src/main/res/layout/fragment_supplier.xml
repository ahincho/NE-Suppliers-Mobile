<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.view.main.SupplierFragment">
    <TextView
        android:id="@+id/supplierListTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginVertical="20dp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:text="@string/suppliers"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/supplierSearchView"/>
    <androidx.appcompat.widget.SearchView
        android:id="@+id/supplierSearchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        app:iconifiedByDefault="false"
        app:queryHint="Search..."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/supplierListTitle"
        app:layout_constraintBottom_toTopOf="@id/supplierTable" />
    <TableLayout
        android:id="@+id/supplierTable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="10dp"
        android:stretchColumns="1,2,3,4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/supplierSearchView">
        <TableRow tools:ignore="UselessParent">
            <TextView
                android:text="@string/id"
                android:textAllCaps="true"
                android:textAlignment="center"
                android:textSize="14sp"
                android:textStyle="bold"
                android:padding="10dp"
                android:layout_column="1"/>
            <TextView
                android:text="@string/name"
                android:textAllCaps="true"
                android:textAlignment="center"
                android:textSize="14sp"
                android:textStyle="bold"
                android:padding="10dp"
                android:layout_column="2"/>
            <TextView
                android:text="@string/ruc"
                android:textAllCaps="true"
                android:textAlignment="center"
                android:textSize="14sp"
                android:textStyle="bold"
                android:padding="10dp"
                android:layout_column="3"/>
            <TextView
                android:text="@string/state"
                android:textAllCaps="true"
                android:textAlignment="center"
                android:textSize="14sp"
                android:textStyle="bold"
                android:padding="10dp"
                android:layout_column="4"/>
        </TableRow>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/suppliersRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </TableLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/suppliersAddButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="30dp"
        android:src="@drawable/ic_add"
        android:contentDescription="@string/submit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>